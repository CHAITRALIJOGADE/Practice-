import java.util.Scanner;

public class ArrayofAverage {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        double sum = 0;

        for (int i = 0; i < n; i++) {
            sum += sc.nextInt();
        }

        double average = sum / n;
        System.out.printf("%.2f", average);

        sc.close();
    }
}
